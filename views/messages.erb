<h1>Messages</h1>
<h3><%= @noMsg %></h3>

<% @messages.each do |message| %>

<ul>
  <li>
    <div id="msg_content">Message From: <%= @users.find(message.sender_id).user_name  %>|   Message about:
      <%= Item.find(message.related_item_id).name%> | <span id="msg"> <%= message.content %></span></div>
    <span id="msg_read">READ:</span> <%= message.read_status %>

    <form action="/reply" method="post">
    <button>reply</button>
    </form>

    <form action="/messages/<%= message.id %>" method="post">
      <input type="hidden" value="delete" name="_method">
      <button>Delete</button>
    </form>

  </li>
</ul>
<% end %>
